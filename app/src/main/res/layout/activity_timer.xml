<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- DatePicker for selecting the date in spinner mode -->
    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:datePickerMode="spinner" />

    <!-- Spacer View to create separation -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- TimePicker for selecting the time in spinner mode -->
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner" />

    <!-- Button for setting the deadline -->
    <Button
        android:id="@+id/setDeadlineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Set Deadline" />

    <!-- TextView for displaying remaining time -->
    <TextView
        android:id="@+id/remainingTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="16dp"
        android:text=""
        android:textSize="18sp" />
</LinearLayout>